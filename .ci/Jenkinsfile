pipeline {
    agent none
    stages {
        stage('Show environment') {
            agent any
            steps {
                echo pwd
            }
        }
        stage('Download UE4.22') {
            agent any
            steps{
                echo 'Downloading...'
                git branch: '4.22', url: 'git@github.com:EpicGames/UnrealEngine.git'
            }
        }
        stage('Build Docker Image') {
            agent {
                dockerfile {
                    filename 'Dockerfile'
                    dir '.ci'
                }
            }
            steps {
                sh 'git --version'
            }
        }
    }
}
