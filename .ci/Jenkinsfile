pipeline {
    agent none
    stages {
        stage('Show environment') {
            sh 'ls'
            sh 'ls ..'
        }
        stage('Download UE4.22') {
            echo 'Downloading...'
        }
        stage('Build Docker Image') {
            agent {
                dockerfile {
                    filename 'Dockerfile'
                    dir '.ci'
                }
            }
            steps {
                sh 'git --version'
            }
        }
    }
}
