pipeline {
    agent none
    stages {
        stage('Download UE4.22') {
            agent any
            steps{
                echo 'Downloading...'
                dir('ue4-22') {
                    git credentialsId: 'jeschatamy', branch: '4.22', url: 'git@github.com:EpicGames/UnrealEngine.git'
                }
            }
        }
        stage('Build Docker Image') {
            agent {
                dockerfile {
                    filename 'Dockerfile'
                    dir '.ci'
                    args '-v /home/jesch/.jenkins/workspace/test-ue4/:/var/jenkins-home'
                }
            }
            steps {
                sh 'git --version'
            }
        }
    }
    post {
        failure {
            cleanWS()
        }
    }
}
